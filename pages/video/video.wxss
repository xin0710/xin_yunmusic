/* pages/video/video.wxss */
.videoContainer{
  height: 100%;
}
/* 搜索栏区域 */
.searchContainer{
  padding: 20rpx 0;
  display: flex;
}
.searchContainer image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.searchContainerLeftPic{
  margin-left: 20rpx;
}
.searchContainerRightPic{
  margin-right: 20rpx;
}
.search{
  margin: 0 10rpx;
  line-height: 60rpx;
  text-align: center;
  color: #9999FF;
  border: 1rpx solid rgb(221, 221, 221);
  border-radius: 20rpx;
  flex: 2;
}
/* 导航栏区域 */
.bannerScroll{
  display: flex;
  height: 60rpx;
  white-space: nowrap;
  background-color: #fff;
}
.bannerScrollItem{
  margin: 0 20rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}
.bannerScrollItem:nth-child(1){
  margin-left: 40rpx;
}
.bannerScroll .active{
  border-bottom: 5rpx solid #d43c33;
}
/* 视频列表区域 */
.videoListContainer{
  width: 100%;
  height: calc(100vh - 168rpx);
  padding: 0 3%;
  box-sizing: border-box;
}
.videoItem{
  width: 100%;
  margin-top: 10rpx;
}
.videoItem video{
  width: 100%;
  border-radius: 20rpx;
}
.videoItem image{
  width: 100%;
  height: 450rpx;
  border-radius: 20rpx;
}

.videoItem .content {
  font-size: 26rpx;
  height:80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}