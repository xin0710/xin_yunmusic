/* pages/index/index.wxss */

/* 轮播图区域 */
.indexContainer{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgb(228, 237, 240);
}
.bannerSwiper{
  margin: 0;
  width: 100%;
  height: 300rpx;
  background-color: #fff;
}
swiper-item view{
  width: 100%;
  height: 300rpx;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}
.indexContainer image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
/* 导航区域 */
.navIcons{
  width: 100%;
  display: flex;
  background-color: #fff;
  border-radius: 0 0 20rpx 20rpx;
  overflow: hidden;
}
.navIcon{
  width: 20%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.navIcon text{
  font-size: 30rpx;
}
.navIcon .iconfont{
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx 0;
  font-size: 60rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #5DA0E3;
  border-radius: 50%;
  color: #fff;
}
/* 推荐歌单区域 */
.recommendContainer{
  margin-top: 20rpx;
  width: 100%;
  height: 420rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
}
.recommendScroll{
  display: flex;
  height: 300rpx;
}
.scrollItem{
  margin: 0 20rpx;
}
.scrollItem image{
  height: 200rpx;
  width: 200rpx;
}
.scrollItem text{
  font-size: small;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
/* 排行榜区域 */
.topListContainer{
  margin-top: 20rpx;
  width: 100%;
  height: 620rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.topSwiper{
  width: 100%;
  height: 500rpx;
}
.topSwiperItem{
  margin: 20rpx;
  padding: 0;
  width: 610rpx;
  height: 460rpx;
  border: 1rpx solid #DEDEDE;
  box-shadow: 2rpx 1rpx 10rpx 2rpx #DEDEDE;
  border-radius: 20rpx;
}
.topSwiperItemNav{
  height: 80rpx;
}
.topSwiperItemNavLeft{
  float: left;
  width: 250rpx;
  line-height: 80rpx;
  font-weight: bold;
}
.topSwiperItemNavRight{
  float: right;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
  font-size: small;
  text-overflow: ellipsis;
  overflow: hidden;
  opacity: .5;
}
.topSwiperItemContent{
  padding: 0;
  margin: 20rpx 0;
  width: 100%;
  height: 100rpx;
}
.topSwiperItemContent image{
  float: left;
  margin-left: 40rpx;
  height: 100rpx;
  width: 100rpx;
}
.topSwiperItemContentNum{
  float: left;
  width: 60rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-weight: bold;
  text-align: center;
}
.topSwiperItemContentMusic{
  padding: 0;
  float: left;
  width: 400rpx;
  height: 100rpx;
}
.topSwiperItemContentName{
  display: -webkit-box;
  float: left;
  width: 100%;
  height: 50rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.topSwiperItemContentAuthor{
  display: -webkit-box;
  float: left;
  width: 100%;
  height: 50rpx;
  font-size: small;
  text-overflow: ellipsis;
  line-height: 50rpx;
  opacity: .5;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.topSwiperItemContentTag{
  margin-top: 30rpx;
  margin-left: 10rpx;
  padding: 0;
  float: left;
  width: 70rpx;
  height: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 40rpx;
  text-align: center;
  opacity: .8;
  background-color: #DEDEDE;
  border-radius: 10rpx;
}