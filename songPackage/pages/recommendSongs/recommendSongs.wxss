/* pages/recommendSongs/recommendSongs.wxss */
@import '../../../static/iconfont/iconfont.wxss';

.recommendSongsContainer{
  width: 100%;
}
/* 顶部图片日期 */
.topContainer{
  position: relative;
  width: 100%;
  height: 400rpx;
}
.topContainer image{
  position: absolute;
  width: 100%;
  height: 100%;
}
.date{
  position: absolute;
  margin-top: 300rpx;
  margin-left: 10%;
  width: 150rpx;
  height: 100rpx;
  font-weight: bold;
  color: #fff;
}
.mouth{
  font-size: 50rpx;
}
/* 播放列表 */
.listContainer{
  position: relative;
  margin-top: -20rpx;
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;
}
/* 播放列表顶部区域 */
.listTop{
  display: flex;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}
.playAllIcon{
  width: 10%;
  text-align: center;
  box-sizing: border-box;
}
.playAllText{
  width: 80%;
  font-weight: bold;
  box-sizing: border-box;
}
.selectCheck{
  padding-right: 20rpx;
  width: 10%;
  text-align: right;
  box-sizing: border-box;
}
.icon-24gf-playCircle{
  color: #d43c33;
}
.icon-duoxuankuang{
  opacity: .7;
}
.icon-gengduo-shuxiang{
  opacity: .7;
}
/* 播放列表歌曲区域 */
.songList{
  width: 100%;
  height: calc(100vh - 460rpx);
  padding: 0 3%;
  box-sizing: border-box;
}
.songItem{
  display: flex;
  width: 100%;
  height: 100rpx;
  margin: 10rpx 0;
}
.songImage image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.songNameAndAuthors{
  display:-webkit-box;
  padding: 0 20rpx;
  width: 80%;
  height: 100rpx;
  line-height: 50rpx;
  box-sizing: border-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.songName{
  display:-webkit-box;
  width: 100%;
  height: 50rpx;
  font-weight: bold;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.songAuthors{
  width: 100%;
  height: 50rpx;
  font-size: 25rpx;
  opacity: .6;
}